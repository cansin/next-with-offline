{
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/errors"
  ],
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": { "jest": true }
    },
    {
      "files": ["**/*.config.js"],
      "env": { "node": true, "browser": false }
    }
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "import/order": ["error", { "newlines-between": "always" }]
  }
}
